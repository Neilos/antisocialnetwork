<%= stylesheet_link_tag "profile", media: "all", "data-turbolinks-track" => true %>

<div class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <h1 class="navbar-brand pull-left">Givr</h1>
  <ul class="nav navbar-nav pull-right">
    <li class="navbar-text">Signed in as <%= current_user.name %></li>
    <li><%= button_to "Sign Out", signout_path, class: "btn btn-primary navbar-btn pull-right" %></button></li>
  </ul>
  </div>
</div>

<div class="container">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
</div>